<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@color/white" android:startColor="@color/white" android:type="linear" />
                    <stroke android:width="1dp" android:color="@color/greenF" />
                    <corners android:radius="4dp" />
                    <padding android:bottom="4dp" android:left="5dp" android:right="5dp" android:top="4dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/vector_down_arrow_link" />
            </item>
        </layer-list>
    </item>
</selector>